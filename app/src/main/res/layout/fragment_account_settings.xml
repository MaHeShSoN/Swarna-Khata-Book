<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/cream_background"
    tools:context=".AccountSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/my_light_primary"
                app:navigationIcon="@drawable/famicons__arrow_back"
                app:title="Account Settings"
                app:titleTextAppearance="@style/ToolbarTitle"
                app:titleTextColor="@color/white" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:paddingStart="2dp"
                android:paddingTop="0dp"
                android:paddingEnd="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAccountInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/librebaskervilleregular"
                        android:text="Account Information"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/material_symbols__account_circle_outline"
                            app:tint="@color/my_light_primary" />

                        <TextView
                            android:id="@+id/textOwnerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            tools:text="Owner Name: John Doe" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_phone_custom"
                            app:tint="@color/my_light_primary" />

                        <TextView
                            android:id="@+id/textUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            tools:text="Phone: +91 12345 67890" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/stash__shop"
                            app:tint="@color/my_light_primary" />

                        <TextView
                            android:id="@+id/textShopName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            tools:text="Shop: Example Jewellers" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/hugeicons__taxes"
                            app:tint="@color/my_light_primary" />

                        <TextView
                            android:id="@+id/textGstNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            tools:text="GST: 27ABCDE1234F1Z5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iconSubscriptionStatus"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/fluent__premium_24_regular"
                            app:tint="@color/my_light_primary" />

                        <TextView
                            android:id="@+id/textSubscriptionStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            tools:text="Subscription: Premium" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAppLock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/librebaskervilleregular"
                                android:text="App Lock"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textAppLockStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratmedium"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"
                                tools:text="Enabled" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchAppLock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="@color/my_light_primary"
                            app:trackTint="@color/my_light_primary_container" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textAppLockDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserratregular"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="14sp"
                        tools:text="PIN protection is enabled. You'll need to enter your 4-digit PIN when opening the app.\n\nSecurity feature: If you're ever forced to unlock your app against your will, enter your PIN in reverse to safely wipe all data." />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardChangePIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/tabler__password_user"
                        app:tint="@color/my_light_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Change PIN"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/material_symbols__arrow_forward_ios_rounded"
                        app:tint="@color/my_light_secondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserratbold"
                android:text="DANGER ZONE"
                android:textColor="@color/status_unpaid"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDeleteAllData"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserratmedium"
                android:paddingVertical="12dp"
                android:text="Delete All Data"
                android:textColor="@color/status_unpaid"
                app:icon="@drawable/material_symbols__delete_forever"
                app:iconTint="@color/status_unpaid"
                app:strokeColor="@color/status_unpaid" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLogout"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratmedium"
                android:paddingVertical="12dp"
                android:text="Logout"
                android:textColor="@color/status_unpaid" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>