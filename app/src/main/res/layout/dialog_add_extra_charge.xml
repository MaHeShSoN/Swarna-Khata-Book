<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/chargeNameInputLayout"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Charge Name (e.g. Bead Work)"
        app:boxBackgroundColor="@color/my_light_surface"
        app:boxStrokeColor="@color/my_light_primary"
        app:boxStrokeWidth="1dp"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/my_light_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chargeNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/my_light_on_surface"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/chargeAmountInputLayout"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Amount"
        app:boxBackgroundColor="@color/my_light_surface"
        app:boxStrokeColor="@color/my_light_primary"
        app:boxStrokeWidth="1dp"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/my_light_secondary"
        app:prefixText="â‚¹">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chargeAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/my_light_on_surface"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>