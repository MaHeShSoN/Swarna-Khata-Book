<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    tools:context=".UpgradeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/my_light_primary"
            app:navigationIcon="@drawable/famicons__arrow_back"
            app:title="Upgrade to Premium"
            app:titleTextAppearance="@style/ToolbarTitle"
            app:titleTextColor="@color/white" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/librebaskervilleregular"
                android:text="Choose your plan"
                android:textColor="@color/my_light_on_surface"
                android:textSize="24sp" />

            <!-- Trial info banner (only visible when in trial) -->
            <LinearLayout
                android:id="@+id/trialBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:backgroundTint="@color/my_light_secondary_container"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="You're in Trial Mode"
                    android:textColor="@color/my_light_secondary_container"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/trialDaysRemaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:text="7 days remaining"
                    android:textColor="@color/my_light_secondary_container"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/montserratregular"
                android:text="Select the plan that best fits your business needs"
                android:textColor="@color/my_light_on_background"
                android:textSize="16sp" />

            <!-- Monthly Plans Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/montserratsemibold"
                android:text="Monthly Plans"
                android:textColor="@color/my_light_on_surface"
                android:textSize="18sp" />

            <!-- Basic Monthly Plan -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/basicMonthlyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Basic"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="₹99/month"
                        android:textColor="@color/my_light_primary"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="• Up to 100 customers\n• Up to 500 invoices\n• Basic reporting"
                        android:textColor="@color/my_light_on_background"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Standard Monthly Plan -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/standardMonthlyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_primary"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Standard"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="₹199/month"
                        android:textColor="@color/my_light_primary"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="• Unlimited customers\n• Unlimited invoices\n• Advanced reporting\n• Email invoices\n• Customer portal"
                        android:textColor="@color/my_light_on_background"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Premium Monthly Plan -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/premiumMonthlyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Premium"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="₹299/month"
                        android:textColor="@color/my_light_primary"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="• Everything in Standard\n• Multi-user access\n• API access\n• Premium support\n• Custom branding"
                        android:textColor="@color/my_light_on_background"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Yearly Plans Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/montserratsemibold"
                android:text="Yearly Plans (Save 20%)"
                android:textColor="@color/my_light_on_surface"
                android:textSize="18sp" />

            <!-- Basic Yearly Plan -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/basicYearlyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Basic Yearly"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="₹999/year"
                        android:textColor="@color/my_light_primary"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratregular"
                        android:text="(₹83/month)"
                        android:textColor="@color/status_partial"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="• Up to 100 customers\n• Up to 500 invoices\n• Basic reporting"
                        android:textColor="@color/my_light_on_background"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Standard Yearly Plan -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/standardYearlyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Standard Yearly"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="₹1,999/year"
                        android:textColor="@color/my_light_primary"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratregular"
                        android:text="(₹167/month)"
                        android:textColor="@color/status_partial"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="• Unlimited customers\n• Unlimited invoices\n• Advanced reporting\n• Email invoices\n• Customer portal"
                        android:textColor="@color/my_light_on_background"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Premium Yearly Plan -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/premiumYearlyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Premium Yearly"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="₹2,999/year"
                        android:textColor="@color/my_light_primary"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratregular"
                        android:text="(₹250/month)"
                        android:textColor="@color/status_partial"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="• Everything in Standard\n• Multi-user access\n• API access\n• Premium support\n• Custom branding"
                        android:textColor="@color/my_light_on_background"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Terms and Notes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/montserratregular"
                android:text="By purchasing a subscription, you agree to our terms of service. Subscriptions will automatically renew unless cancelled at least 24 hours before the end of the current period."
                android:textColor="@color/my_light_on_background"
                android:textSize="12sp" />

            <!-- Current Plan Indicators -->
            <!-- These views are used for highlighting current plan -->
            <TextView
                android:id="@+id/basicMonthlyCurrentPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Plan"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/standardMonthlyCurrentPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Plan"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/premiumMonthlyCurrentPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Plan"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/basicYearlyCurrentPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Plan"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/standardYearlyCurrentPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Plan"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/premiumYearlyCurrentPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Plan"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Debug Section (Hidden in Release) -->
            <LinearLayout
                android:id="@+id/debugContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/box"
                android:backgroundTint="#F0F0F0"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DEBUG: Google Play Products"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#E91E63"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/verifyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify Product Details"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/debugText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>