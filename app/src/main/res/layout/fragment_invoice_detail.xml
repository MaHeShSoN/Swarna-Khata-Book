<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/my_light_primary"
            app:menu="@menu/invoice_detail_menu"
            app:navigationIcon="@drawable/famicons__arrow_back"
            app:popupTheme="@style/CustomPopupMenu"
            app:title="Invoice Details"
            app:titleTextAppearance="@style/ToolbarTitle"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:indeterminate="true"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="0dp"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom"
        android:layout_height="wrap_content"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Invoice Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/invoiceHeaderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/invoiceNumberLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratmedium"
                        android:text="Invoice #"
                        android:textColor="@color/my_light_secondary"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/invoiceNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/invoiceNumberLabel"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="INV-001" />

                    <TextView
                        android:id="@+id/paymentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/status_badge_background"
                        android:fontFamily="@font/montserratmedium"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:backgroundTint="@color/status_paid"
                        tools:text="Paid" />

                    <TextView
                        android:id="@+id/dateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="Date: "
                        android:textColor="@color/my_light_secondary"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/invoiceNumberLabel" />

                    <TextView
                        android:id="@+id/invoiceDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratmedium"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/dateLabel"
                        app:layout_constraintTop_toTopOf="@id/dateLabel"
                        tools:text="15 Mar 2025" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Customer Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/customerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/invoiceHeaderCard"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/customerSectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratmedium"
                        android:text="Customer Details"
                        android:textColor="@color/my_light_primary"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/callCustomerButton"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Call customer"
                        app:icon="@drawable/baseline_phone_24"
                        app:iconTint="@color/my_light_primary"
                        app:layout_constraintEnd_toStartOf="@id/whatsappCustomerButton"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/whatsappCustomerButton"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="WhatsApp customer"
                        app:icon="@drawable/mdi__whatsapp"
                        app:iconTint="@color/my_light_primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/customerName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserratbold"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/customerSectionTitle"
                        tools:text="John Smith" />

                    <TextView
                        android:id="@+id/customerPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/customerName"
                        tools:text="+91 9876543210" />

                    <TextView
                        android:id="@+id/customerAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/customerPhone"
                        tools:text="123 Main St, Bangalore, Karnataka" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Items Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/customerCard"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/itemsSectionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratmedium"
                            android:gravity="center"
                            android:text="Items"
                            android:textColor="@color/my_light_primary"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addItemsButton"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add"
                            android:textColor="@color/my_light_primary"
                            app:icon="@drawable/material_symbols__add_rounded"
                            app:iconTint="@color/my_light_primary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/itemsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"                        android:nestedScrollingEnabled="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/my_light_outline" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/subtotalLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratregular"
                            android:text="Subtotal:"
                            android:textAlignment="viewStart"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/subtotalValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:fontFamily="@font/montserratregular"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            tools:text="₹78,000.00" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/extraChargesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="Extra Charges:"
                            android:textAlignment="viewStart"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/extraChargesContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/taxLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratregular"
                            android:text="Tax:"
                            android:textAlignment="viewStart"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/taxValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratregular"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            tools:text="₹2,340.00" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/totalLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratbold"
                            android:text="Total:"
                            android:textAlignment="viewStart"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/totalValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratbold"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/my_light_primary"
                            android:textSize="16sp"
                            tools:text="₹80,340.00" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>




            <!-- Metal Fine Payments Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metalFineCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                android:visibility="gone"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@+id/itemsCard"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratmedium"
                        android:text="Metal Fine Payments"
                        android:textColor="@color/my_light_primary"
                        android:textSize="16sp" />

                    <!-- Gold fine section -->
                    <LinearLayout
                        android:id="@+id/goldFineSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="Gold Fine"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/totalGoldWeightValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserratregular"
                                android:text="Total: 0g"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="14sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/goldFineInputLayout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                app:suffixText="g">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/goldFineEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Amount"
                                    android:inputType="numberDecimal"
                                    android:textSize="14sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                android:id="@+id/applyGoldFineButton"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apply"
                                android:textColor="@color/my_light_primary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Silver fine section -->
                    <LinearLayout
                        android:id="@+id/silverFineSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:text="Silver Fine"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/totalSilverWeightValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserratregular"
                                android:text="Total: 0g"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="14sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/silverFineInputLayout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                app:suffixText="g">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/silverFineEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Amount"
                                    android:inputType="numberDecimal"
                                    android:textSize="14sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                android:id="@+id/applySilverFineButton"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apply"
                                android:textColor="@color/my_light_primary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fine metal deduction summary -->
                    <LinearLayout
                        android:id="@+id/fineMetalSummarySection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="8dp"
                            android:background="@color/my_light_outline" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratmedium"
                            android:text="Deductions Summary"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/goldFineDeductionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserratregular"
                                android:text="Gold Fine Deduction:"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/goldFineDeductionValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratregular"
                                android:text="0g"
                                android:textColor="@color/status_partial"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/silverFineDeductionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserratregular"
                                android:text="Silver Fine Deduction:"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/silverFineDeductionValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratregular"
                                android:text="0g"
                                android:textColor="@color/status_partial"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="8dp"
                            android:background="@color/my_light_outline" />


                        <LinearLayout
                            android:id="@+id/originalTotalLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/taxLabel">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserratregular"
                                android:text="Original Total:"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/originalTotalValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".34"
                                android:fontFamily="@font/montserratregular"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/my_light_secondary"
                                android:foreground="@drawable/strikethrough"
                                android:textSize="14sp"
                                tools:text="₹80,340.00" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/adjustedTotalLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserratbold"
                                android:text="Adjusted Total:"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/adjustedTotalValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratbold"
                                android:text="₹0.00"
                                android:textColor="@color/my_light_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Payments Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/paymentsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/metalFineCard"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/paymentsSectionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratmedium"
                            android:text="Payments"
                            android:textColor="@color/my_light_primary"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addPaymentButton"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Payment"
                            android:textColor="@color/my_light_primary"
                            app:icon="@drawable/material_symbols__add_rounded"
                            app:iconTint="@color/my_light_primary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/paymentsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/noPaymentsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserratregular"
                        android:gravity="center"
                        android:text="No payments added yet"
                        android:textColor="@color/my_light_secondary"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/my_light_outline" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/amountPaidLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratregular"
                            android:text="Amount Paid:"
                            android:textAlignment="viewStart"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/amountPaidValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratregular"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            tools:text="₹20,000.00" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/balanceDueLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratbold"
                            android:text="Balance Due:"
                            android:textAlignment="viewStart"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/balanceDueValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratbold"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/my_light_error"
                            android:textSize="16sp"
                            tools:text="₹60,340.00" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/notesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:layout_constraintTop_toBottomOf="@id/paymentsCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Notes"
                            android:fontFamily="@font/librebaskervilleregular"
                            android:textColor="@color/my_light_primary"
                            android:textSize="18sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editNotesButton"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/edit_notes"
                            android:textColor="@color/my_light_primary"
                            android:fontFamily="@font/montserratmedium"
                            app:icon="@drawable/material_symbols__edit_rounded"
                            app:iconTint="@color/my_light_primary" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/emptyNotesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="No notes available"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="@color/my_light_secondary"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/notesContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Note content here..."
                        android:fontFamily="@font/montserratregular"
                        android:textColor="@color/my_light_on_surface"
                        android:textSize="14sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/notesEditLayout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxStrokeColor="@color/my_light_primary"
                        app:hintTextColor="@color/my_light_secondary"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/notesEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:hint="Enter notes"
                            android:fontFamily="@font/montserratregular"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            android:inputType="textMultiLine"
                            android:lines="4" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/actionButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/notesCard">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/printButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="Print"
                    android:textColor="@color/my_light_primary"
                    app:icon="@drawable/material_symbols_light__print"
                    app:iconTint="@color/my_light_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/shareButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/my_light_primary"
                    android:text="Share"
                    android:textColor="@color/my_light_on_primary"
                    app:icon="@drawable/material_symbols__share"
                    app:iconTint="@color/my_light_on_primary" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>