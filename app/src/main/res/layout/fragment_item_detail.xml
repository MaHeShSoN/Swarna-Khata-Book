<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/my_light_primary"
            app:navigationIcon="@drawable/famicons__arrow_back"
            app:popupTheme="@style/CustomPopupMenu"
            app:title="@string/item_details"
            app:titleTextAppearance="@style/ToolbarTitle"
            app:titleTextColor="@color/white"
            app:menu="@menu/item_detail_menu" />

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:paddingStart="2dp"
        android:paddingTop="0dp"
        android:paddingEnd="2dp"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom"
        />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Item Basic Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/librebaskervilleregular"
                        android:text="@string/basic_information"
                        android:textColor="@color/my_light_primary"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:id="@+id/itemTypeIndicator"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_gold_background"
                            android:layout_marginEnd="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/item_code"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/itemCodeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratregular"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="16sp"
                                tools:text="GLD-001"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/category"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/categoryValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratregular"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="16sp"
                                tools:text="Ring"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/item_type"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/itemTypeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratregular"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="16sp"
                                tools:text="Gold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/purity"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/purityValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratregular"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="16sp"
                                tools:text="22K"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/location"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/locationValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratregular"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="16sp"
                                tools:text="Showcase 2"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Weight Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/librebaskervilleregular"
                        android:text="@string/weight_information"
                        android:textColor="@color/my_light_primary"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/gross_weight"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/grossWeightValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratregular"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="16sp"
                                tools:text="10.5g"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/net_weight"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/netWeightValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratregular"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="16sp"
                                tools:text="9.5g"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/wastage"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/wastageValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratregular"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="16sp"
                                tools:text="0.5g"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Stock Management Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/librebaskervilleregular"
                            android:text="@string/stock_information"
                            android:textColor="@color/my_light_primary"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/stockStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_badge_background"
                            android:fontFamily="@font/montserratmedium"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            tools:text="IN STOCK"
                            tools:backgroundTint="@color/status_paid"/>

                        <View
                            android:id="@+id/stockStatusIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/circle_background"
                            tools:backgroundTint="@color/status_paid"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/current_stock"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/currentStockValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratbold"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="18sp"
                                tools:text="15 PCS"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="@string/stock_adjustment"
                        android:textColor="@color/my_light_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/decreaseStockButton"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Decrease stock"
                            app:icon="@drawable/material_symbols__remove_rounded"
                            app:iconTint="@color/my_light_primary"/>

                        <TextView
                            android:id="@+id/stockAdjustmentValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratmedium"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/stockUnitText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratmedium"
                            android:text="@string/pcs"
                            android:textColor="@color/my_light_secondary"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/increaseStockButton"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Increase stock"
                            app:icon="@drawable/material_symbols__add_rounded"
                            app:iconTint="@color/my_light_primary"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/finalStockValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratregular"
                        android:gravity="center"
                        android:text="Final: 15 PCS"
                        android:textColor="@color/my_light_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/applyStockButton"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_adjustment"
                        android:visibility="gone"
                        app:backgroundTint="@color/my_light_primary"
                        app:cornerRadius="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Pricing Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/librebaskervilleregular"
                        android:text="@string/pricing_information"
                        android:textColor="@color/my_light_primary"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:id="@+id/goldRateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:text="@string/gold_rate"
                            android:textColor="@color/my_light_secondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/goldRateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            tools:text="₹5,200/g (on Net Weight)"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/makingChargesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:text="@string/making_charges"
                            android:textColor="@color/my_light_secondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/makingChargesValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratregular"
                            android:textColor="@color/my_light_on_surface"
                            android:textSize="14sp"
                            tools:text="₹500/g"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Extra Charges Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/extraChargesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/librebaskervilleregular"
                        android:text="@string/extra_charges"
                        android:textColor="@color/my_light_primary"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:id="@+id/extraChargesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Usage Statistics Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/librebaskervilleregular"
                            android:text="@string/usage_statistics"
                            android:textColor="@color/my_light_primary"
                            android:textSize="18sp"/>

                        <View
                            android:id="@+id/performanceIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_background"
                            tools:backgroundTint="@color/status_partial"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:baselineAligned="false"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/invoices_used_in"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/invoiceCountValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratbold"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="16sp"
                                tools:text="12"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/quantity_sold"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/quantitySoldValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratbold"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="16sp"
                                tools:text="25"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/total_revenue"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/totalRevenueValue"
                                android:layout_width="wrap_content"
