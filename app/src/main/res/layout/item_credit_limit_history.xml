<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/my_light_surface"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:strokeColor="@color/my_light_outline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Date and person who made the change -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/changeDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/my_light_on_background"
                android:textSize="12sp"
                tools:text="15 Jan 2024, 14:30" />

            <TextView
                android:id="@+id/changedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/my_light_secondary"
                android:textSize="12sp"
                tools:text="By: +91 9876543210" />
        </LinearLayout>

        <!-- Limit change values -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/previousLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/my_light_on_surface"
                android:textSize="14sp"
                tools:text="₹5,000.00" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/solar__arrow_right_outline"
                app:tint="@color/my_light_secondary" />

            <TextView
                android:id="@+id/newLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/my_light_primary"
                android:textSize="14sp"
                tools:text="₹10,000.00" />
        </LinearLayout>

        <!-- Reason for change -->
        <TextView
            android:id="@+id/changeReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserratregular"
            android:textColor="@color/my_light_on_surface"
            android:textSize="14sp"
            tools:text="Increased due to good payment history and additional collateral provided." />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>