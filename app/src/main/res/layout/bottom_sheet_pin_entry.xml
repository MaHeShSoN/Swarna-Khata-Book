<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/pin_entry_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserratbold"
            android:text="Enter PIN"
            android:textAlignment="center"
            android:textColor="@color/my_light_primary"
            android:textSize="24sp" />

        <!-- Reason text (shown when needed) -->
        <TextView
            android:id="@+id/pin_fallback_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserratmedium"
            android:textAlignment="center"
            android:textColor="@color/my_light_secondary"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- Visual PIN Dots -->
        <LinearLayout
            android:id="@+id/pin_dots_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <View
                android:id="@+id/pin_dot_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/pin_dot_empty" />
        </LinearLayout>

        <!-- Error text -->
        <TextView
            android:id="@+id/pin_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserratmedium"
            android:textAlignment="center"
            android:textColor="@color/status_unpaid"
            android:textSize="14sp"
            android:visibility="gone" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Hidden PIN input (for storing the actual PIN) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pin_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pinEditText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="numberPassword"
            android:maxLength="4" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Keypad Section -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/keypad_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <!-- PIN Keyboard -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4">

            <!-- Row 1 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                style="@style/PinKeypadButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                style="@style/PinKeypadButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                style="@style/PinKeypadButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="3" />

            <!-- Row 2 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                style="@style/PinKeypadButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                style="@style/PinKeypadButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                style="@style/PinKeypadButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="6" />

            <!-- Row 3 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                style="@style/PinKeypadButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                style="@style/PinKeypadButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                style="@style/PinKeypadButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="9" />

            <!-- Row 4 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear"
                style="@style/PinKeypadButton.Action"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:icon="@drawable/material_symbols__close_rounded"
                app:iconTint="@color/my_light_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0"
                style="@style/PinKeypadButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="@style/PinKeypadButton.Action"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:icon="@drawable/famicons__arrow_back"
                app:iconTint="@color/my_light_primary" />
        </GridLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserratmedium"
                android:text="Cancel"
                android:textColor="@color/my_light_primary"
                app:strokeColor="@color/my_light_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserratmedium"
                android:text="Confirm"
                android:enabled="false"
                app:backgroundTint="@color/my_light_primary" />
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>