<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cream_background"
    android:padding="16dp">

    <!-- Top row with item name and stock -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/cream_background">

        <!-- Primary Text: Item Name -->
        <TextView
            android:id="@+id/primary_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/cream_background"
            android:textSize="14sp"
            android:textColor="@color/my_light_on_surface" />

        <!-- Stock Text: Availability -->
        <TextView
            android:id="@+id/stock_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:background="@color/cream_background"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Details Text: Weight, Purity, etc. -->
    <TextView
        android:id="@+id/details_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/cream_background"
        android:textSize="12sp"
        android:textColor="@color/my_light_on_background" />
    
    <!-- Hidden TextView for secondary info (to be hidden) -->
    <TextView
        android:id="@+id/secondary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/cream_background" />
    
    <!-- Hidden TextView to store the image URL -->
    <TextView
        android:id="@+id/url_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone" />
</LinearLayout>