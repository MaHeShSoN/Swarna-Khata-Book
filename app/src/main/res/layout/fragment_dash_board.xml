<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    android:fillViewport="true"
    tools:context=".DashBoardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/my_light_primary"
                    app:menu="@menu/dashboard_menu"
                    app:title="Dashboard"
                    app:titleTextAppearance="@style/ToolbarTitle" />

            </com.google.android.material.appbar.AppBarLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quick Actions Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/librebaskervilleregular"
                        android:text="Quick Actions"
                        android:textColor="@color/my_light_primary"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Create Invoice Button -->
                        <LinearLayout
                            android:id="@+id/createInvoiceAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_invoice"
                                app:tint="@color/my_light_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserratmedium"
                                android:text="New Invoice"
                                android:textAlignment="center"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Add Customer Button -->
                        <LinearLayout
                            android:id="@+id/addCustomerAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/line_md__person_twotone"
                                app:tint="@color/my_light_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserratmedium"
                                android:text="Add Client"
                                android:textAlignment="center"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Add Inventory Button -->
                        <LinearLayout
                            android:id="@+id/addInventoryAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/uil__gold"
                                app:tint="@color/my_light_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserratmedium"
                                android:text="Add Item"
                                android:textAlignment="center"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Record Payment Button -->
                        <LinearLayout
                            android:id="@+id/recordPaymentAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/mdi__currency_inr"
                                app:tint="@color/my_light_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserratmedium"
                                android:text="Payments"
                                android:textAlignment="center"
                                android:textColor="@color/my_light_on_surface"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sales Overview Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/librebaskervilleregular"
                            android:text="Sales Overview"
                            android:textColor="@color/my_light_primary"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/periodSelector"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/itemPerformanceChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp" />


                    <!-- Sales Metrics -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <!-- Total Sales -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="Total Sales"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/totalSalesValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserratbold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="₹0.00"
                                android:textColor="@color/my_light_primary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Invoice Count -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="Invoices"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/invoiceCountValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserratbold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="0"
                                android:textColor="@color/my_light_primary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Outstanding Balance -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="Outstanding"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/outstandingBalanceValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserratbold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="₹0.00"
                                android:textColor="@color/status_unpaid"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hidden Recent Invoices section - kept for compatibility but not shown -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentInvoicesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/emptyRecentInvoicesState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" />


            <!-- Hidden Low Stock section - kept for compatibility but not shown -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lowStockRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/emptyLowStockState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" />

            <!-- Business Insights Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/my_light_surface"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/my_light_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/librebaskervilleregular"
                        android:text="Business Insights"
                        android:textColor="@color/my_light_primary"
                        android:textSize="18sp" />

                    <!-- Popular Categories Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/montserratsemibold"
                            android:text="Popular Categories"
                            android:textColor="@color/my_light_secondary"
                            android:textSize="14sp" />

                        <!-- Category 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/category1Name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/montserratmedium"
                                    android:textColor="@color/my_light_on_surface"
                                    android:textSize="12sp"
                                    tools:text="Necklaces" />

                                <TextView
                                    android:id="@+id/category1Percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserratmedium"
                                    android:textColor="@color/my_light_primary"
                                    android:textSize="12sp"
                                    tools:text="45%" />
                            </LinearLayout>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/category1Progress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                app:trackCornerRadius="2dp"
                                app:trackThickness="4dp" />
                        </LinearLayout>

                        <!-- Category 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/category2Name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/montserratmedium"
                                    android:textColor="@color/my_light_on_surface"
                                    android:textSize="12sp"
                                    tools:text="Rings" />

                                <TextView
                                    android:id="@+id/category2Percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserratmedium"
                                    android:textColor="@color/my_light_primary"
                                    android:textSize="12sp"
                                    tools:text="30%" />
                            </LinearLayout>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/category2Progress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                app:trackCornerRadius="2dp"
                                app:trackThickness="4dp" />
                        </LinearLayout>

                        <!-- Category 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/category3Name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/montserratmedium"
                                    android:textColor="@color/my_light_on_surface"
                                    android:textSize="12sp"
                                    tools:text="Bangles" />

                                <TextView
                                    android:id="@+id/category3Percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserratmedium"
                                    android:textColor="@color/my_light_primary"
                                    android:textSize="12sp"
                                    tools:text="25%" />
                            </LinearLayout>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/category3Progress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                app:trackCornerRadius="2dp"
                                app:trackThickness="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Peak Business Days Chart -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/montserratsemibold"
                            android:text="Peak Business Days"
                            android:textColor="@color/my_light_secondary"
                            android:textSize="14sp" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/peakDaysChart"
                            android:layout_width="match_parent"
                            android:layout_height="120dp" />
                    </LinearLayout>

                    <!-- Customer and Sales Metrics Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2">

                        <!-- Total Customers -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="Total Customers"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/totalCustomersValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratbold"
                                android:textColor="@color/my_light_primary"
                                android:textSize="16sp"
                                tools:text="150" />
                        </LinearLayout>

                        <!-- New Customers -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="New Customers"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/newCustomersValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserratbold"
                                    android:textColor="@color/my_light_primary"
                                    android:textSize="16sp"
                                    tools:text="12" />

                                <TextView
                                    android:id="@+id/newCustomersChange"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:fontFamily="@font/montserratmedium"
                                    android:textSize="12sp"
                                    tools:text="+20%"
                                    tools:textColor="@color/status_paid" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Sales Growth -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="Sales Growth"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/salesGrowthValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserratbold"
                                    android:textSize="16sp"
                                    tools:text="+15%"
                                    tools:textColor="@color/status_paid" />

                                <ImageView
                                    android:id="@+id/salesGrowthIndicator"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="4dp"
                                    tools:src="@drawable/ic_arrow_upward" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Average Purchase Interval -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="Avg. Purchase Interval"
                                android:textColor="@color/my_light_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/avgPurchaseIntervalValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserratbold"
                                android:textColor="@color/my_light_primary"
                                android:textSize="16sp"
                                tools:text="45 days" />
                        </LinearLayout>

                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>