<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SwarnaKhataBook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorSecondary">@color/my_light_secondary</item>
        <item name="colorPrimaryVariant">@color/my_light_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryContainer">@color/cream_background</item>
        <item name="android:colorBackground">@color/cream_background</item>
    </style>

    <style name="Theme.SwarnaKhataBook" parent="Base.Theme.SwarnaKhataBook" />


    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="fontFamily">@font/ralewaymedium</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="background">@color/my_light_primary</item>
    </style>
    <style name="ItemActiveIndicator">
        <!-- Change this color to match your app's gold theme -->
        <item name="android:color">@color/my_light_primary_container</item>
        <!-- You can also adjust the shape if needed -->
        <!-- <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item> -->
    </style>

    <style name="TextAppearance.Material3.ActionBar.Title" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/playfairregular</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:fontFamily">@font/librebaskervillebold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.TextInputLayout.GoldForm" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/my_light_surface</item>
        <item name="boxStrokeColor">@color/my_light_primary</item>
        <item name="hintTextColor">@color/my_light_secondary</item>
        <item name="startIconTint">@color/my_light_primary</item>
        <item name="endIconTint">@color/my_light_secondary</item>
        <item name="errorIconTint">@color/my_light_error</item>
        <item name="errorTextColor">@color/my_light_error</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageButton" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.RoundedImageButton" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.App.Button.Gold" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/my_light_primary</item>
        <item name="android:textColor">@color/my_light_on_primary</item>
        <item name="iconTint">@color/my_light_on_primary</item>
        <item name="rippleColor">@color/my_light_secondary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedGold" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/my_light_primary</item>
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="iconTint">@color/my_light_primary</item>
        <item name="rippleColor">@color/my_light_primary_container</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>





    <style name="GoldThemeDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorSecondary">@color/my_light_secondary</item>
        <item name="colorTertiary">@color/my_light_tertiary</item>
        <item name="colorSurface">@color/my_light_surface</item>
        <item name="colorOnPrimary">@color/my_light_on_primary</item>
        <item name="colorOnSecondary">@color/my_light_on_secondary</item>
        <item name="colorOnSurface">@color/my_light_on_surface</item>
        <item name="colorOnBackground">@color/my_light_on_background</item>
        <item name="colorError">@color/my_light_error</item>
        <item name="android:background">@drawable/dialog_rounded_background</item>
        <item name="materialAlertDialogTitleTextStyle">@style/GoldThemeDialogTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/GoldThemePositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/GoldThemeNegativeButton</item>
    </style>

    <style name="GoldThemeDialogTitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GoldThemePositiveButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/my_light_on_primary</item>
        <item name="backgroundTint">@color/my_light_primary</item>
    </style>

    <style name="GoldThemeNegativeButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/my_light_secondary</item>
    </style>






































</resources>