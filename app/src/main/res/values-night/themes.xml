<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SwarnaKhataBook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorSecondary">@color/my_light_secondary</item>
        <item name="colorPrimaryVariant">@color/my_light_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryContainer">@color/cream_background</item>
        <item name="android:colorBackground">@color/cream_background</item>
    </style>



    <style name="Theme.SwarnaKhataBook" parent="Base.Theme.SwarnaKhataBook" />

    <style name="Widget.App.Chip.Filter.Warning" parent="Widget.App.Chip.Filter">
        <item name="chipBackgroundColor">@color/status_unpaid_light</item>
        <item name="chipStrokeColor">@color/status_unpaid</item>
        <item name="android:textColor">@color/my_light_on_surface</item>
        <item name="checkedIconTint">@color/red</item>
        <item name="rippleColor">@color/my_light_secondary</item>
        <item name="chipIconTint">@color/red</item>
    </style>


    <!-- Add these styles to your existing styles.xml file -->
    <style name="PinKeypadButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/my_light_on_surface</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="strokeColor">@color/my_light_outline</item>
        <item name="rippleColor">@color/my_light_primary_container</item>
    </style>

    <style name="PinKeypadButton.Action" parent="PinKeypadButton">
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>


    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/my_light_primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="checkedIconTint">@color/my_light_primary</item>
        <item name="chipIconTint">@color/my_light_primary</item>
        <item name="rippleColor">@color/my_light_secondary</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Caption</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>
    <style name="CustomPopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/cream_background</item>
        <item name="android:textColor">@color/my_light_on_primary</item>
        <item name="android:backgroundTint">@color/cream_background</item>
        <item name="android:colorBackground">@color/cream_background</item>

        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="FullScreenBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/FullScreenBottomSheet</item>
    </style>

    <style name="FullScreenBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@drawable/full_screen_bottom_sheet_background</item>
        <item name="behavior_peekHeight">0dp</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="fontFamily">@font/ralewaymedium</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="background">@color/my_light_primary</item>
    </style>
    <style name="ItemActiveIndicator">
        <!-- Change this color to match your app's gold theme -->
        <item name="android:color">@color/my_light_primary_container</item>
        <!-- You can also adjust the shape if needed -->
        <!-- <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item> -->
    </style>

    <style name="TextAppearance.Material3.ActionBar.Title" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserratregular</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:fontFamily">@font/librebaskervillebold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Widget.App.TextInputLayout.GoldForm" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/my_light_surface</item>
        <item name="boxStrokeColor">@color/my_light_primary</item>
        <item name="hintTextColor">@color/my_light_secondary</item>
        <item name="startIconTint">@color/my_light_primary</item>
        <item name="endIconTint">@color/my_light_secondary</item>
        <item name="errorIconTint">@color/my_light_error</item>
        <item name="errorTextColor">@color/my_light_error</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageButton" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.RoundedImageButton" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.App.Button.Gold" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/my_light_primary</item>
        <item name="android:textColor">@color/my_light_on_primary</item>
        <item name="iconTint">@color/my_light_on_primary</item>
        <item name="rippleColor">@color/my_light_secondary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedGold" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/my_light_primary</item>
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="iconTint">@color/my_light_primary</item>
        <item name="rippleColor">@color/my_light_primary_container</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>





    <style name="GoldThemeDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorSecondary">@color/my_light_secondary</item>
        <item name="colorTertiary">@color/my_light_tertiary</item>
        <item name="colorSurface">@color/my_light_surface</item>
        <item name="colorOnPrimary">@color/my_light_on_primary</item>
        <item name="colorOnSecondary">@color/my_light_on_secondary</item>
        <item name="colorOnSurface">@color/my_light_on_surface</item>
        <item name="colorOnBackground">@color/my_light_on_background</item>
        <item name="colorError">@color/my_light_error</item>
        <item name="android:background">@drawable/dialog_rounded_background</item>
        <item name="materialAlertDialogTitleTextStyle">@style/GoldThemeDialogTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/GoldThemePositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/GoldThemeNegativeButton</item>
    </style>

    <style name="GoldThemeDialogTitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GoldThemePositiveButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/my_light_on_primary</item>
        <item name="backgroundTint">@color/my_light_primary</item>
    </style>

    <style name="GoldThemeNegativeButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/my_light_secondary</item>
    </style>

    <!-- Display Typography -->
    <style name="TextAppearance.App.Display" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/librebaskervillebold</item>
        <item name="android:fontFamily">@font/librebaskervillebold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Headings -->
    <style name="TextAppearance.App.H1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/librebaskervillebold</item>
        <item name="android:fontFamily">@font/librebaskervillebold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.App.H2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/librebaskervillebold</item>
        <item name="android:fontFamily">@font/librebaskervillebold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.App.H3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/librebaskervillebold</item>
        <item name="android:fontFamily">@font/librebaskervillebold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Subheadings -->
    <style name="TextAppearance.App.Subheading" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserratsemibold</item>
        <item name="android:fontFamily">@font/montserratsemibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Body Text -->
    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Small Text/Caption -->
    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserratlight</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Metrics/Data Labels -->
    <style name="TextAppearance.App.MetricLabel" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/montserratmedium</item>
        <item name="android:fontFamily">@font/montserratmedium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Metrics/Data Values -->
    <style name="TextAppearance.App.MetricValue" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserratsemibold</item>
        <item name="android:fontFamily">@font/montserratsemibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Buttons -->
    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserratmedium</item>
        <item name="android:fontFamily">@font/montserratmedium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Special Pricing/Value Elements -->
    <style name="TextAppearance.App.SpecialValue" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/librebaskervillebold</item>
        <item name="android:fontFamily">@font/librebaskervillebold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/my_light_primary</item>
    </style>




































</resources>